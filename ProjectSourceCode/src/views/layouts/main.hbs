        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="preload" href="/css/style.css" as="style">
        <link id="app-css" rel="stylesheet" href="/css/style.css" />
        <script>
            // Function to reload CSS by updating the href with a timestamp
            function reloadCSS() {
                const link = document.getElementById('app-css');
                const href = link.getAttribute('href').split('?')[0]; // Remove any existing query parameters
                link.setAttribute('href', `${href}?v=${new Date().getTime()}`); // Append a timestamp to force reload
            }

            // Call the function to reload CSS when the page loads
            window.onload = reloadCSS;
        </script>
    </head>
