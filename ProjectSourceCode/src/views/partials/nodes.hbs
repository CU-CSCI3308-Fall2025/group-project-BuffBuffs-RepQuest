<div class="vertical-pathway">
  {{#each nodes}}
    <div class="step" style="--offset: {{offset}}%">
      
      {{!-- If this node is a rest node, show the rest icon --}}
      {{#if (eq type "rest")}}
        <img src="/img/pathlevel-grayRest.png" class="node" data-id="{{id}}" data-type="{{type}}" alt="Rest Day {{id}}">
      {{else}}
        <img src="/img/pathlevel-gray.png" class="node" data-id="{{id}}" data-type="{{type}}" alt="Workout {{id}}">
      {{/if}}

    </div>
  {{/each}}
</div>