{{!-- <main class="main-content"> --}}
<div class="achievements-page">
  <div class="achievements-color achievements-color-1"></div>
  <div class="achievements-color achievements-color-2"></div>
  <div class="achievements-color achievements-color-3"></div>
  <div class="achievements-color achievements-color-4"></div>

  <h1 class="page-title">Achievements</h1>

  {{#if username}}
    <p class="subtle">Showing achievements for <strong>{{username}}</strong></p>
  {{/if}}

  {{#if achievements.length}}
    <div class="legend">
      <span class="legend-item">
        <span class="legend-chip earned-chip" aria-hidden="true">✓</span> Unlocked
      </span>
      <span class="legend-item">
        <span class="legend-chip locked-chip" aria-hidden="true">✕</span> Locked
      </span>
    </div>

    <section class="achievements-grid" aria-label="Achievements">
      {{#each achievements}}
        <article class="achievement-card {{#if earned}}earned{{else}}locked{{/if}}" aria-labelledby="ach-title-{{id}}">
          <div class="icon-wrap">
            <img class="icon" src="{{icon_path}}" alt="{{title}}">
            {{#if earned}}
              <span class="status-badge" title="Unlocked" aria-label="Unlocked">✓</span>
            {{else}}
              <span class="status-badge muted" title="Locked" aria-label="Locked">X</span>
            {{/if}}
          </div>

          <h2 class="label" id="ach-title-{{id}}">{{title}}</h2>

          <p class="meta">
            {{#if earned}}
              Unlocked: <time datetime="{{earned_at}}">{{earned_at}}</time>
            {{else}}
              Locked
            {{/if}}
          </p>
        </article>
      {{/each}}
    </section>
  {{else}}
    <p>No achievements to show yet.</p>
  {{/if}}
</div>
{{!-- </main> --}}
