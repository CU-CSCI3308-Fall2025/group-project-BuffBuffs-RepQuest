<main class="main-content">
  <h1 class="text-center text-3xl font-semibold">Achievements</h1>

  <div class="container">
    <div class="achievements-grid">
      {{#each achievements}}
        <div class="col {{#if earned}}earned{{else}}locked{{/if}}">
          <img src="{{icon_path}}" alt="{{title}}" />
          <p class="achievement-label">{{title}}</p>
          {{#if earned}}
            <p class="achievement-meta">Unlocked: {{earned_at}}</p>
          {{else}}
            <p class="achievement-meta">Locked</p>
          {{/if}}
        </div>
      {{/each}}
    </div>
  </div>
</main>
