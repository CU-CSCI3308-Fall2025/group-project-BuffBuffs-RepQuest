<main class="main-content">

  <h1 class="page-title text-center mb-4">Calendar</h1>
  <div class="col">
        <div class="container-md container-fluid py-4 h-100">
                <div id="calendar" class="row h-100">
                    <div class="col-sm m-1 bg-white rounded px-1 px-md-2" id="day-0">
                        <div class="h6 text-center position-relative py-2 day">
                            Sunday
                        </div>
                    </div>
                    <div class="col-sm m-1 bg-white rounded px-1 px-md-2" id="day-1">
                        <div class="h6 text-center position-relative py-2 day">
                            Monday
                        </div>
                    </div>
                    <div class="col-sm m-1 bg-white rounded px-1 px-md-2" id="day-2">
                        <div class="h6 text-center position-relative py-2 day">
                            Tuesday 
                        </div>
                    </div>
                    <div class="col-sm m-1 bg-white rounded px-1 px-md-2" id="day-3">
                        <div class="h6 text-center position-relative py-2 day">
                            Wednesday
                        </div>
                    </div>
                    <div class="col-sm m-1 bg-white rounded px-1 px-md-2" id="day-4">
                        <div class="h6 text-center position-relative py-2 day">
                            Thursday
                        </div>
                    </div>
                    <div class="col-sm m-1 bg-white rounded px-1 px-md-2" id="day-5">
                        <div class="h6 text-center position-relative py-2 day">
                            Friday
                        </div>
                    </div>
                    <div class="col-sm m-1 bg-white rounded px-1 px-md-2" id="day-6">
                        <div class="h6 text-center position-relative py-2 day">
                            <p id="current-date"></p>
                        </div>
                    </div>
                </div>        
            </div>


        </div>



        <script>
                            function getDaySuffix(day) {
                if (day >= 11 && day <= 13) return "th";
                switch (day % 10) {
                    case 1: return "st";
                    case 2: return "nd";
                    case 3: return "rd";
                    default: return "th";
                }
                }

                const today = new Date();

                const workoutSplit = {
                    0: "Rest",   // Sunday
                    1: "Push",   // Monday
                    2: "Rest",   // Tuesday
                    3: "Pull",   // Wednesday
                    4: "Rest",   // Thursday
                    5: "Legs",   // Friday
                    6: "Rest"    // Saturday
                };

                // 0 = Sunday
                const todayWeekdayIndex = today.getDay();

                // Clone today's date and step back to the most recent Sunday
                const startOfWeek = new Date(today);
                startOfWeek.setDate(today.getDate() - todayWeekdayIndex);

                for (let i = 0; i < 7; i++) {
                const date = new Date(startOfWeek);
                date.setDate(startOfWeek.getDate() + i);

                const weekday = date.toLocaleDateString('en-US', { weekday: 'long' });
                const month = date.toLocaleDateString('en-US', { month: 'short' });
                const day = date.getDate();
                const suffix = getDaySuffix(day);

                const formatted = `${weekday} ${month} ${day}${suffix}`;

                const dayDiv = document.getElementById(`day-${i}`);
                if (dayDiv) {
                    dayDiv.innerText = formatted;

                    // Workout text
                    const workout = workoutSplit[i];

                    const workoutContainer = document.createElement("div");
                    workoutContainer.className = "workout-label";

                    workoutContainer.innerHTML = `
                        Today is a:<br>
                        <strong>${workout} Day!</strong>
                    `;

                    dayDiv.appendChild(workoutContainer);

                    // Box around current date
                    if (date.toDateString() === today.toDateString()) {
                    dayDiv.classList.add('today');
                    }
                }
                }

        </script>


</main>